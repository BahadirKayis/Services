<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_app_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_16dp"
        android:orientation="vertical"
        android:text="Hello World!"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_app_usage_time" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:backgroundTint="@color/red"
        android:padding="@dimen/_8dp"
        android:text="@string/start_background_service"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rc_app_time" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:backgroundTint="@color/red"
        android:padding="@dimen/_8dp"
        android:text="@string/start_foreground_service"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_background"
        app:layout_constraintStart_toEndOf="@+id/btn_background"
        app:layout_constraintTop_toTopOf="@+id/btn_background" />

</androidx.constraintlayout.widget.ConstraintLayout>